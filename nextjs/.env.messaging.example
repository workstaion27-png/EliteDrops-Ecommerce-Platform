# إعدادات منصة AppScenic (اختياري)
# للحصول على المفتاح: https://appscenic.com/dashboard/api
APPSCENIC_API_KEY=your_appscenic_api_key_here

# إعدادات منصة Zendrop (اختياري)
# للحصول على المفتاح: https://dashboard.zendrop.com/settings/api
ZENDROP_API_KEY=your_zendrop_api_key_here

# إعدادات Twilio للرسائل النصية (SMS)
# للتسجيل: https://www.twilio.com
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# إعدادات SendGrid للبريد الإلكتروني
# للتسجيل: https://sendgrid.com
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=no-reply@yourdomain.com

# إعدادات المتجر
NEXT_PUBLIC_STORE_NAME=اسم متجرك
NEXT_PUBLIC_STORE_URL=https://yourstore.com
